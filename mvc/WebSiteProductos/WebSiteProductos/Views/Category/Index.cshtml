@model IEnumerable<WebSiteProductos.Models.Category>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <p>
            @Html.ActionLink("Crear nueva categoria", "Create")
        </p>

        <table>
            <tr>
                <td>@Html.DisplayNameFor(model => model.CategoryName)</td>

            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.CategoryName)</td>

                    <td>@Html.ActionLink("Detalle", "Detalle", new { id = item.CategoryID })</td>
                    <td>@Html.ActionLink("Eliminar", "Delete", new { id = item.CategoryID })</td>
                </tr>
            }
        </table>
    </div>
</body>
</html>
