@model IEnumerable<WebSiteProductos.Models.Subcategory>


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubcategoryName)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubcategoryName)
            </td>
            <td>
             
                @Html.ActionLink("Details", "Detalle", new { id=item.SubcategoryID}) |
                @Html.ActionLink("Delete", "Delete", new { id=item.SubcategoryID })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
